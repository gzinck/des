<CloseAutomatonPopup>:
    size_hint: 0.5, 0.5
    pos_hint: {"right":0.75,"top":0.75}
    title: 'Close Automaton'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Are you sure you wish to close this automaton?'
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Cancel'
                on_release: root.dismiss()
            Button:
                text: 'Confirm'
                on_press: root.close_automaton()
                on_release: root.dismiss()