<MessagePopup>:
    size_hint: 0.5, 0.5
    pos_hint: {"right":0.75,"top":0.75}
    title: root.title
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.message
            size_hint_y: None
            text_size: self.width, None
            height: self.texture_size[1]
        Button:
            text: 'Close'
            on_release: root.dismiss()