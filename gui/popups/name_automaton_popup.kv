<NameAutomatonPopup>:
    size_hint: 0.5, 0.5
    pos_hint: {"right":0.75,"top":0.75}
    title: 'Name Automaton'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Give your automaton a unique name.'
        TextInput:
            id: text_input
            on_text: root.on_text(self.text)
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Cancel'
                on_release: root.dismiss()
            Button:
                id: confirm
                text: 'Confirm'
                on_press: root.on_confirm()
        Label:
            id: error
            text: 'The name is not valid or not unique.'