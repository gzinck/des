#:include gui/popups/name_automaton_popup.kv

<OpenAutomatonPopup>:
    size_hint: 0.9, 0.9
    pos_hint: {"right":0.95,"top":0.95}
    title: 'Open Automaton'
    BoxLayout:
        orientation: 'vertical'
        FileChooserListView:
            id: file_chooser
            on_selection: root.on_select(self.selection)
            path: root.default_path
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            Button:
                text: 'Cancel'
                on_release: root.dismiss()
            Button:
                text: 'Open'
                on_press: root.open_automaton()
                on_release: root.dismiss()