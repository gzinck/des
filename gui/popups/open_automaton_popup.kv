#:include gui/popups/name_automaton_popup.kv

<OpenAutomatonPopup>:
    size_hint: 0.9, 0.9
    pos_hint: {"right":0.95,"top":0.95}
    title: 'Open Automaton'
    BoxLayout:
        orientation: 'vertical'
        FileChooserListView:
            on_selection: root.on_select(self.selection)
            path: '/Users/gzinck/Git/des/tests/arenas/construct_attractor_test_cases'
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            Button:
                text: 'Cancel'
                on_release: root.dismiss()
            Button:
                text: 'Open'
                on_press: root.open_automaton()
                on_release: root.dismiss()