<DefaultPathPopup>:
    size_hint: 0.9, 0.9
    pos_hint: {"right":0.95,"top":0.95}
    title: 'Choose Default File Path'
    BoxLayout:
        orientation: 'vertical'
        FileChooserListView:
            id: file_chooser
            path: root.default_path
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            Button:
                text: 'Cancel'
                on_release: root.dismiss()
            Button:
                text: 'Select'
                on_press: root.on_save()