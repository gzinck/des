#:include gui/menus/file_menu.kv
#:include gui/menus/ops_menu.kv
#:include gui/automaton_display/automaton_view.kv

<Menus>:
    FileMenu:
    OpsMenu:

BoxLayout:
    orientation: 'horizontal'

    AutomatonView:

    BoxLayout:
        size_hint_x: .3
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: .1
            orientation: 'horizontal'
            Button:
                text: 'Create'
            Button:
                text: 'File'
                on_release:
                    root.ids.menus.current = 'fileMenu'
            Button:
                text: 'Operations'
                on_release:
                    root.ids.menus.current = 'opsMenu'
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            height: self.height

            Menus:
                id: menus